@inherits ToastBase

<div class="toast @(IsVisible ? "toast-visible" : null) @BackgroundCssClass"
     style="opacity : @opacity;@XPos:20px;@YPos:20px;z-index:99999;">
    <span style="font-size: 20px; cursor: pointer; position: absolute; right: 20px;" @onclick="()=> { opacity = 0; }">✖</span>
    <div class="toast-icon">
        <i class="fa fa-@IconCssClass" aria-hidden="true"></i>
    </div>
    <div class="toast-body">
        <h5>@Heading</h5>
        <p>@Message</p>
    </div>
</div>